<asf xmlversion="1.0">
	<select-by-device id="common.components.wifi.winc3400.simple_roaming_https_example">
		<module type="application" id="common.components.wifi.winc3400.simple_roaming_https_example#0" caption="WINC3400 Simple Roaming HTTPS Example">
			<!-- Summary Description -->
			<info type="description" value="summary">
				This example demonstrates https client-server connection in roaming using the WINC3400 Wi-Fi module.
			</info>

			<!-- Source -->
			<build type="include-path" value="."/>
			<build type="c-source" value="main21.c"/>
			<build type="header-file" value="main.h"/>
			<build type="include-path" value="script"/>
			<build type="include-path" value="script/templates"/>
			<build type="distribute" subtype="file" value="script/cert.pem"/>
			<build type="distribute" subtype="file" value="script/key.pem"/>
			<build type="distribute" subtype="file" value="script/README.md"/>
			<build type="distribute" subtype="file" value="script/requirements.txt"/>
			<build type="distribute" subtype="file" value="script/server.py"/>
			<build type="distribute" subtype="file" value="script/templates/main.html"/>

			<!-- Device support -->
			<device-support value="samd21"/>

			<!-- Required modules -->
			<require idref="common.components.wifi.winc3400"/>
			<require idref="sam0.utils"/>
			<require idref="sam0.utils.stdio"/>
			<require idref="sam0.utils.stdio.stdio_serial"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
