<asf xmlversion="1.0">
	<select-by-device id="sam0.drivers.system.power" caption="SYSTEM - Power Management">
	<module type="driver" id="sam0.drivers.system.power#sam_d_r_h" caption="SYSTEM - Power Management for SAM D20/D21/R21/D09/D10/D11/DA/HA">
